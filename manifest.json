{
    "manifest_version": 2,
    "name": "To-Do",
    "version": "2.0",
    "version_name": "2.0-alpha",
    "default_locale": "en",
    "icons": {
        "16": "assets/icons/16.png",
        "32": "assets/icons/32.png",
        "48": "assets/icons/48.png",
        "128": "assets/icons/128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "optional_permissions": [
        "downloads"
    ],
    "permissions": [
        "storage"
    ]
}
